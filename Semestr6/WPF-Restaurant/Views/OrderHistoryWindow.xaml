<Window x:Class="WpfRestaurant.Views.OrderHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Historia zamÃ³wieÅ„ - Foodify" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Background="#f8f9fa"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Konwerter widocznoÅ›ci -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Animacje -->
        <Storyboard x:Key="LoadingSpinAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:2"/>
        </Storyboard>
        
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                           From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>
        
        <!-- Style dla DataGrid -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#dee2e6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#e9ecef"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#f8f9fa"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="RowHeight" Value="40"/>
        </Style>

        <!-- Style dla DataGrid Header -->
        <Style x:Key="DataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#6f42c1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#5a32a3"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- Style dla przyciskÃ³w -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#007bff"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0056b3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004085"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style dla status badge -->
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#6f42c1" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ• Historia zamÃ³wieÅ„" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="{Binding UserFullName}" 
                               FontSize="14" 
                               Foreground="#e9ecef" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" 
                        Content="OdÅ›wieÅ¼" 
                        Style="{StaticResource PrimaryButton}"
                        Background="#28a745"
                        Command="{Binding RefreshOrdersCommand}"/>
            </Grid>
        </Border>

        <!-- Statystyki -->
        <Border Grid.Row="1" Background="White" BorderBrush="#dee2e6" BorderThickness="0,0,0,1" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- CaÅ‚kowita liczba zamÃ³wieÅ„ -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding TotalOrders}" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#6f42c1" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="ZamÃ³wieÅ„ Å‚Ä…cznie" 
                               FontSize="12" 
                               Foreground="#6c757d" 
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- CaÅ‚kowita kwota -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding TotalSpent, StringFormat='${0:#,##0.00}'}" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#28a745" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Wydano Å‚Ä…cznie" 
                               FontSize="12" 
                               Foreground="#6c757d" 
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Status -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding Orders.Count}" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#17a2b8" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="ZamÃ³wieÅ„ widocznych" 
                               FontSize="12" 
                               Foreground="#6c757d" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- GÅ‚Ã³wna zawartoÅ›Ä‡ -->
        <Grid Grid.Row="2" Margin="20">
            <!-- Tabela zamÃ³wieÅ„ -->
            <Border Background="White" CornerRadius="6">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- NagÅ‚Ã³wek tabeli -->
                    <Border Grid.Row="0" Background="#6f42c1" CornerRadius="6,6,0,0" Padding="15">
                        <TextBlock Text="ðŸ“‹ Lista zamÃ³wieÅ„ (kliknij wiersz, aby zobaczyÄ‡ szczegÃ³Å‚y)" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="White"/>
                    </Border>

                    <!-- DataGrid z zamÃ³wieniami -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding Orders}"
                              SelectedItem="{Binding SelectedOrder}"
                              Style="{StaticResource ModernDataGrid}"
                              ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                              Margin="0"
                              Visibility="{Binding HasOrders, Converter={StaticResource BoolToVisibilityConverter}}">
                        
                        <DataGrid.Columns>
                            <!-- Numer zamÃ³wienia -->
                            <DataGridTextColumn Header="Nr" 
                                                Binding="{Binding Id}" 
                                                Width="80"/>
                            
                            <!-- Data zamÃ³wienia -->
                            <DataGridTextColumn Header="Data zamÃ³wienia" 
                                                Binding="{Binding OrderDateDisplay}" 
                                                Width="150"/>
                            
                            <!-- Status -->
                            <DataGridTemplateColumn Header="Status" Width="140">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border>
                                            <Border.Style>
                                                <Style TargetType="Border" BasedOn="{StaticResource StatusBadge}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="PrzyjÄ™te">
                                                            <Setter Property="Background" Value="#ffc107"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="W przygotowaniu">
                                                            <Setter Property="Background" Value="#17a2b8"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Zrealizowane">
                                                            <Setter Property="Background" Value="#28a745"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Status}" 
                                                       Foreground="White" 
                                                       FontSize="11" 
                                                       FontWeight="SemiBold"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                            <!-- Liczba pozycji -->
                            <DataGridTextColumn Header="Pozycje" 
                                                Binding="{Binding ItemsCountDisplay}" 
                                                Width="100"/>
                            
                            <!-- Kwota -->
                            <DataGridTextColumn Header="Kwota" 
                                                Binding="{Binding TotalAmountDisplay}" 
                                                Width="120"/>
                            
                            <!-- Data realizacji -->
                            <DataGridTextColumn Header="Data realizacji" 
                                                Binding="{Binding CompletedDateDisplay}" 
                                                Width="150"/>
                            
                            <!-- Akcje -->
                            <DataGridTemplateColumn Header="Akcje" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="ðŸ–¨ï¸ Paragon" 
                                                Style="{StaticResource PrimaryButton}"
                                                Background="#6F42C1" 
                                                BorderBrush="#6F42C1"
                                                Padding="8,4"
                                                FontSize="11"
                                                Height="28"
                                                Command="{Binding DataContext.PrintReceiptCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Drukuj paragon dla tego zamÃ³wienia"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- Komunikat gdy brak zamÃ³wieÅ„ -->
                    <StackPanel Grid.Row="1" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasOrders}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        
                        <TextBlock Text="ðŸ“„" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Brak zamÃ³wieÅ„ do wyÅ›wietlenia" 
                                   FontSize="16" 
                                   Foreground="#6c757d" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Gdy zÅ‚oÅ¼ysz swoje pierwsze zamÃ³wienie, pojawi siÄ™ tutaj" 
                                   FontSize="12" 
                                   Foreground="#adb5bd" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Loading indicator -->
        <Border Grid.Row="2" 
                Background="Black" 
                Opacity="0.4" 
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border.Triggers>
                <EventTrigger RoutedEvent="Border.Loaded">
                    <BeginStoryboard Storyboard="{StaticResource FadeInAnimation}"/>
                </EventTrigger>
            </Border.Triggers>
        </Border>
        
        <StackPanel Grid.Row="2" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            
            <!-- Animowany spinner -->
            <Border Width="60" Height="60" 
                    Background="#6f42c1" 
                    CornerRadius="30"
                    Margin="0,0,0,20">
                <Border.RenderTransform>
                    <RotateTransform Angle="0"/>
                </Border.RenderTransform>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Border.Loaded">
                        <BeginStoryboard Storyboard="{StaticResource LoadingSpinAnimation}"/>
                    </EventTrigger>
                </Border.Triggers>
                
                <Border Width="40" Height="40" 
                        Background="White" 
                        CornerRadius="20">
                    <TextBlock Text="ðŸ•" 
                               FontSize="20" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>
            </Border>
            
            <TextBlock Text="Åadowanie zamÃ³wieÅ„..." 
                       Foreground="White" 
                       FontWeight="SemiBold" 
                       FontSize="16"
                       HorizontalAlignment="Center"/>
                       
            <ProgressBar IsIndeterminate="True" 
                         Width="200" 
                         Height="4" 
                         Background="Transparent"
                         Foreground="#6f42c1"
                         Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="3" Background="#6f42c1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Historia zamÃ³wieÅ„ - Foodify Restaurant" 
                           Foreground="White" 
                           FontSize="12" 
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="{Binding Orders.Count, StringFormat='ZamÃ³wieÅ„: {0}'}" 
                               Foreground="#e9ecef" 
                               FontSize="12" 
                               VerticalAlignment="Center" 
                               Margin="0,0,20,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window> 